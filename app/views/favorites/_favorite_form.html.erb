<% if post_youtuber.favorited_by?(current_user) %>
  <%= link_to post_youtuber.favorites.count, post_youtuber_favorites_path(post_youtuber.id), method: :delete, remote: true, class: "fas fa-heart heart_red" %>
<% else %>
  <%= link_to post_youtuber.favorites.count, post_youtuber_favorites_path(post_youtuber.id), method: :post, remote: true, class: "fas fa-heart heart_blue" %>
<% end %>
