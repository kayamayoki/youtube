<div class="yohaku"></div>
<div class="mx-auto w-50">
<div class = "card">
<div class ="text-center mt-3">
<div class="post-body">

  <%= attachment_image_tag @post_youtuber, :image, :fill, 300, 300, fallback: "no_image.jpg" %>
  <%= form_with model:@post_youtuber, local: true do |f| %>
  <div class="form-group">
    <h3>プロフィール画像</h3>
      <div class="input-group">
        <div class="input-group-prepend"></div>
     <%= f.attachment_field :image, placeholder: "プロフィール画像" %>
   </div>
      </div>
      
      <div class="form-group">
        <label for="book_title">
          チャンネル名
        </label>
        <p>
          <%= f.text_field :ch_name %>
        </p>
      </div>
      <div class="form-group">
        <label for="book_opinion">
          登録者
        </label>
        <p>
          <%= f.text_field :member %>
        </p>
      </div>
      <div class="form-group">
        <label for="book_opinion">
          タグ
        </label>
        <p>
          <%= f.text_field :tag_list %>
        </p>
      </div>
            <div class="form-group">
        <label for="book_opinion">
          チャンネル説明
        </label>
        <p>
          <%= f.text_area :caption %>
        </p>
      </div>
       <div class="form-group">
        <label for="book_opinion">
          動画URL
        </label>
        <p>
          https://youtu.be/<%= f.text_field :youtube_url %>
        </p>
      </div>
      <div class="form-group">
        <p><%= f.submit 'Update' %></p>
      </div>
      <p>
        <%= link_to "Show", post_youtuber_path(@post_youtuber) %>
        |
        <%= link_to "Back", post_youtubers_path %>
      </p>

</div>
</div>
</div>
</div>

<%end%>