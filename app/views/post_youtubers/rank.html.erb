<div class = "yohaku"></div>
<div class = "container ">
  <div class = "row">
<!-- 月間ランキング　-->
<div class="rank-container1">
<h2>月間ランキング</h2>

  <% @ranks.each.with_index(1) do |post_youtuber, i| %>
  <div class="rank-box">
    <h4><%= i %>位</h4>
    <div class="card shadow-lg">
      <%= link_to post_youtuber_path(post_youtuber) do %>
        <%= attachment_image_tag post_youtuber, :image, :fill, 200, 120, class:"card-img-top"; %>
      <% end %>
      <div class="card-body pt-1 pb-1">
        <p class="card-title mb-0">◆<%= post_youtuber.ch_name.truncate(10) %></p>
        <div class="row border-top m-auto">
          <div class="col-5 offset-1 pt-3">
            <%= link_to "詳細", post_youtuber_path(post_youtuber), class: "btn btn-sm btn-dark" %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>

