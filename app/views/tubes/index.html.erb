<div class ="yohaku"></div>

<div class="container-fluid">
<%= form_with(url: tubes_index_path, local: true, method: :get, class: "search-form") do |form| %>

<!-- 検索バー  -->
<div class="col-10 col-sm-3">
<%= form.text_field :keyword, placeholder: "検索", class: "search-input col-sm-12" %>
</div>


<div class="radio-btn col-10 col-sm-12 col-md-3">
<%= form.radio_button :order, :relevance %>
<%= form.label :order, "通常検索", {value: :relevance} %>
</div>


<div class="radio-btn col-10 col-sm-12 col-md-4">
<%= form.radio_button :order, :viewCount %>
<%= form.label :order, "再生回数が多い順", {value: :viewCount} %>
</div>

<%= form.submit "検索", class: "search-btn col-6 col-sm-1" %>

<% end %>
</div>




<div class="row">
  <% if @youtube_data != nil %>
<% @youtube_data.items.each do |item| %>
  <div class="card" style="width: 20rem;">
     
     <div class="card-body">
    <iframe allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" frameborder="0" height="200" src="https://www.youtube.com/embed/<%= item.id.video_id %>" width="260"></iframe>
      <% snippet = item.snippet %>
     <p class="movie_title">
      <%= snippet.title %>
     </p>
     <p class="channel_title">
  <%= snippet.channel_title %>
</p>
<p class="movie_date">
  <%= snippet.published_at.strftime("%Y年%m月%d日 %H時%M分") %>
</p>
 
      
       </div>
       </div>
       <% end %>
       <% end %>
       </div>

