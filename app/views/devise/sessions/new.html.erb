<div class="mx-auto w-50">

  <h2 class="text-center mt-3">Sign in</h2>

  <%= form_with scope: resource, as: resource_name, url: session_path(resource_name), local: true do |f| %>
    <% if notice %>
      <p class="alert alert-notice" style="color:red;"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-error" style="color:red;"><%= alert %></p>
    <% end %>
    <div class="form-group">
      <%= f.label "Email" %><br />
      <%= f.email_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label "password" %>
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>



    <div class="form-group">
      <%= f.submit "sign in", class: "btn btn-block btn-success" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>