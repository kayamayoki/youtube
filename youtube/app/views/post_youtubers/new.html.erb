<h1>投稿フォーム</h1>
<% if @post_youtuber.errors.any? %>
  <%= @post_youtuber.errors.count %>件のエラーが発生しました
  <% @post_youtuber.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model: @post_youtuber, local:true do |f| %>
  <h4>画像</h4>
  <%= f.attachment_field :image %>
  <h4>チャンネル名</h4>
  <%= f.text_field :ch_name %>
  <h4>チャンネル説明</h4>
  <%= f.text_area :caption %>
  <h4>登録者数</h4>
  <%= f.text_area :member %>
  <h4>チャンネルURL</h4>
  <%= f.text_area :url %>

  <%= f.submit '投稿' %>
<% end %>